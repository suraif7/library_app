<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s9">

    <!-- Input fields for Card No -->
    <EditText
        android:id="@+id/editTextCardNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter Card No"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Input fields for Date Out -->
    <EditText
        android:id="@+id/editTextDateOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCardNo"
        android:layout_margin="16dp"
        android:hint="Enter Date Out"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <!-- Input fields for Date Due -->
    <EditText
        android:id="@+id/editTextDateDue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextDateOut"
        android:layout_margin="16dp"
        android:hint="Enter Date Due"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <!-- Input fields for Date Returned -->
    <EditText
        android:id="@+id/editTextDateReturned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextDateDue"
        android:layout_margin="16dp"
        android:hint="Enter Date Returned"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <!-- Buttons for CRUD operations -->
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextDateReturned"
        android:layout_marginStart="16dp"
        android:text="Save"/>

    <Button
        android:id="@+id/buttonRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSave"
        android:layout_marginStart="16dp"
        android:text="Read"/>

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonRead"
        android:layout_marginStart="16dp"
        android:text="Update"/>

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonUpdate"
        android:layout_marginStart="16dp"
        android:text="Delete"/>

    <!-- Placeholder for showing typed texts -->
    <TextView
        android:id="@+id/textViewTypedTexts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonDelete"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />
</RelativeLayout>
